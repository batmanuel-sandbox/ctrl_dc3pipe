#<? cfg paf policy ?>
#
# Stage policy for SourceDetectionStage

exposureKey: "calibratedExposure0"

backgroundPolicy: {
    algorithm:  "NATURAL_SPLINE"        # how to interpolate the background values
    binsize:    256                     # how large regions of the sky should be used for each background point
}

psfPolicy: {
    algorithm: "DoubleGaussian"
    width: 15
    height: 15
    #5*/(2*sqrt(2*log(2)))
    parameter: 3.22195985
}
detectionPolicy: {
    minPixels:1 
    thresholdValue: 3
    thresholdType: "stdev"
    thresholdPolarity: "positive"
}

smoothingPsfKey: "smoothingPsf"
positiveDetectionKey: "positiveFootprintSet"
negativeDetectionKey: "negativeFootprintSet"
backgroundSubtractedExposureKey: "backgroundSubtractedExposure0"
